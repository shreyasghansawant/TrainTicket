<!DOCTYPE html>
<html>
    <head>
        <title>My Bookings</title>
        <style>
            /* Style for table */
            table {
                border-collapse: collapse;
                width: 100%;
            }
            th, td {
                text-align: left;
                padding: 8px;
            }
            th {
                background-color: #4CAF50;
                color: white;
            }
            tr:nth-child(even) {
                background-color: #f2f2f2;
            }
            /* Style for page */
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
            }
            h1 {
                text-align: center;
                margin-top: 50px;
            }
            .container {
                max-width: 1000px;
                margin: 0 auto;
                padding: 20px;
            }
        </style>
    </head>
    <body>
        <h1>My Bookings</h1>
        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th>PRN</th>
                        <th>Train No.</th>
                        <th>Train Name</th>
                        <th>From</th>
                        <th>Passenger Name</th>
                        <th>Date</th>
                        <th>Seats</th>
                        <th>Departure</th>
                    </tr>
                </thead>
                <tbody>
                    <% tickets.forEach((ticket) => { %>
                        <tr>
                            <td><%= ticket.id %></td>
                            <td><%= ticket.train_number %></td>
                            <td><%= ticket.train_name %></td>
                            <td><%= ticket.station_name %></td>
                            <td><%= ticket.name %></td>
                            <td><%= ticket.date %></td>
                            <td><%= ticket.seats %></td>
                            <td><%= ticket.departure %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
